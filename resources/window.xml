<Window Title="Image View and Annotate" Width="800" Height="600">
	<Toolbar text="toolbar" layout="grid" grid="{'row':0, 'sticky':'ew'}">
		<ImageButton id="btnOpnImg" tooltip="Open Image" image="icons8-add-file-16.png" layout="pack" pack="{'side':'left','padx':2,'pady':2}"/>
		<ImageButton id="btnRnmImg" tooltip="Rename Image" image="icons8-rename-16.png" layout="pack" pack="{'side':'left','padx':2,'pady':2}"/>
		<ImageButton id="btnNxtImg" tooltip="Next Image" image="icons8-next-16.png" layout="pack" pack="{'side':'left','padx':2,'pady':2}"/>
		<ImageButton id="btnPrvImg" tooltip="Previous Image" image="icons8-previous-16.png" layout="pack" pack="{'side':'left','padx':2,'pady':2}"/>
		<ImageButton id="btnRotClkwis" tooltip="Rotate Clockwise" image="icons8-rotate-right-16.png" layout="pack" pack="{'side':'left','padx':2,'pady':2}"/>
		<ImageButton id="btnRotAticlkwis" tooltip="Rotate Anticlockwise" image="icons8-rotate-left-16.png" layout="pack" pack="{'side':'left','padx':2,'pady':2}"/>
		<ImageButton id="bntDelImg" tooltip="Delete Image" image="icons8-delete-16.png" layout="pack" pack="{'side':'left','padx':2,'pady':2}"/>
		<ImageButton id="Exit" tooltip="Exit Application" image="icons8-close-window-16.png" layout="pack" pack="{'side':'left','padx':2,'pady':2}"/>
	</Toolbar>
	<ImagePanel id="pnlImage" layout="grid" grid="{'row':1, 'sticky':'ewsn'}" options="{'bg':'white'}"/>
	<Statusbar text="Statusbar" layout="grid" grid="{'row':2, 'sticky':'ew'}"/>
</Window>